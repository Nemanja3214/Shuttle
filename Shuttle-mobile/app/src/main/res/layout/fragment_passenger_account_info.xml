<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passenger.fragments.PassengerAccountInfo">

    <TextView
        android:id="@+id/txt_p_info_surname_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Surname"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_p_info_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_name" />

    <EditText
        android:id="@+id/txt_p_info_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="Jones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_surname_lbl" />

    <ImageButton
        android:id="@+id/img_p_info_pfp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="24dp"
        android:background="#64B5F6"
        android:scaleType="fitStart"
        android:src="@drawable/ic_baseline_account_box_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_p_info_name_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_p_info_name"
        app:layout_constraintTop_toBottomOf="@+id/img_p_info_pfp" />

    <EditText
        android:id="@+id/txt_p_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="Bob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_name_lbl" />

    <TextView
        android:id="@+id/txt_p_info_address_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_p_info_surname"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_surname" />

    <EditText
        android:id="@+id/txt_p_info_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="123 Grove Street"
        app:layout_constraintEnd_toEndOf="@+id/txt_p_info_surname"
        app:layout_constraintStart_toStartOf="@+id/txt_p_info_surname"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_address_lbl" />

    <TextView
        android:id="@+id/txt_p_info_phone_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone Number"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_p_info_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_address" />

    <EditText
        android:id="@+id/txt_p_info_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="0 123 456789"
        app:layout_constraintEnd_toEndOf="@+id/txt_p_info_address"
        app:layout_constraintStart_toStartOf="@+id/txt_p_info_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_phone_lbl" />

    <Button
        android:id="@+id/btn_p_info_info_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_p_info_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>