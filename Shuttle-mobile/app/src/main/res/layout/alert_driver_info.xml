<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_alert_driver_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="bob@gmail.com" />

    <Button
        android:id="@+id/btn_alert_driver_info_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Message"
        app:layout_constraintStart_toStartOf="@+id/txt_alert_driver_info_email"
        app:layout_constraintTop_toBottomOf="@+id/txt_alert_driver_info_email" />

    <Button
        android:id="@+id/btn_alert_driver_info_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:backgroundTint="#B388FF"
        android:text="Call"
        app:layout_constraintStart_toEndOf="@+id/btn_alert_driver_info_message"
        app:layout_constraintTop_toTopOf="@+id/btn_alert_driver_info_message" />
</androidx.constraintlayout.widget.ConstraintLayout>