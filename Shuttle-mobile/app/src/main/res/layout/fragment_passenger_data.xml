<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".driver.fragments.PassengerData"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/container_d_passenger_data_text"
        android:paddingHorizontal="30sp"
        android:paddingTop="30sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:contentDescription="@string/passenger_profile_picture"
            android:id="@+id/img_d_passenger_profile_picture"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passenger_name"
            android:textSize="16sp"
            android:id="@+id/tv_d_passenger_name"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passenger_surname"
            android:textSize="16sp"
            android:id="@+id/tv_d_passenger_surname"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textSize="16sp"
            android:id="@+id/tv_d_passenger_phone_number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="16sp"
            android:id="@+id/tv_d_passenger_email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textSize="16sp"
            android:id="@+id/tv_d_passenger_address"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_d_passenger_data_text">

        <Button
            android:id="@+id/btn_d_passenger_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/phone"/>

        <Button
            android:id="@+id/btn_d_passenger_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@android:color/transparent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableEnd="@drawable/chat"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>