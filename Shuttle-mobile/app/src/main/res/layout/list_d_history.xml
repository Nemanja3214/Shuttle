<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_d_history_route_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="123 Street Street"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_d_history_date" />

    <TextView
        android:id="@+id/list_d_history_route_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="456 Avenue Avenue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_d_history_route_A" />

    <TextView
        android:id="@+id/list_d_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-light"
        android:text="26/11/22"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_d_history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-black"
        android:text="18:12 - 19:30"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_d_history_date"
        app:layout_constraintStart_toEndOf="@+id/list_d_history_date"
        app:layout_constraintTop_toTopOf="@+id/list_d_history_date" />

    <TextView
        android:id="@+id/list_d_history_pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Bob Jones"
        app:layout_constraintBottom_toBottomOf="@+id/list_d_history_ppfp"
        app:layout_constraintStart_toEndOf="@+id/list_d_history_ppfp"
        app:layout_constraintTop_toTopOf="@+id/list_d_history_ppfp" />

    <ImageView
        android:id="@+id/list_d_history_ppfp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_account_box_24"
        app:layout_constraintStart_toStartOf="@+id/list_d_history_date"
        app:layout_constraintTop_toBottomOf="@+id/list_d_history_route_B"
        app:tint="?colorTertiary" />

    <TextView
        android:id="@+id/list_d_history_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="280 RSD"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_d_history_pname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_d_history_pname" />

</androidx.constraintlayout.widget.ConstraintLayout>