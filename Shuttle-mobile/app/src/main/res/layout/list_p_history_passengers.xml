<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp">

    <ImageView
        android:id="@+id/img_p_history_p_pfp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#AED581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24" />

    <TextView
        android:id="@+id/txt_p_history_p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Bob Jones"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_p_history_p_pfp"
        app:layout_constraintStart_toEndOf="@+id/img_p_history_p_pfp"
        app:layout_constraintTop_toTopOf="@+id/img_p_history_p_pfp" />
</androidx.constraintlayout.widget.ConstraintLayout>