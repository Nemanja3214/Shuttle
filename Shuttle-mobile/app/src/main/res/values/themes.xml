<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShuttleMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#E2861D</item>
        <item name="colorSecondary">#1DE286</item>
        <item name="colorTertiary">#861DE2</item>

        <item name="colorPrimaryVariant">#C2563D</item>
        <item name="colorSecondaryVariant">#3DC256</item>
        <item name="colorTertiaryContainer">#563DC2</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorControlNormal">?attr/colorOnPrimary</item>

        <!-- Remove default action bar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
</resources>